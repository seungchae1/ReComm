<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:id="@+id/Mainlayout"
    android:orientation="vertical">
        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_kr_medium"
            android:textSize="14dp"
            android:text="엄희주"
            android:textColor="#494949"/>

        <TextView
            android:id="@+id/comm_content"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_kr_regular"
            android:textSize="12dp"
            android:text="굉장히 재미있었다. 내 인생에 도움을 준 책이다. 너무너무 재미있다 다음에 또 읽어야 겠다. "
            android:textColor="#494949"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comm_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_kr_regular"
                    android:textSize="12dp"
                    android:textColor="#777777"
                    android:text="2023.01.03" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 댓글 -->
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/book_detail_comment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/notosans_kr_regular"
                    android:textSize="12dp"
                    android:textColor="#777777"
                    android:text="0" />

                <!-- 좋아요 -->
                <ImageView
                    android:id="@+id/comm_good"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/book_detail_good"/>

                <TextView
                    android:id="@+id/comm_gnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/notosans_kr_regular"
                    android:textSize="12dp"
                    android:textColor="#777777"
                    android:text="0" />
            </LinearLayout>

        </LinearLayout>
</LinearLayout>